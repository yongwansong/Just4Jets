       <option>Sharjah International Airport</option>
    </select>
    </div>
    <div class="m-mol">
    <label for="Paxload">Pax load </label>
    <input type="text" name="Pax load" id="Paxload"  name="contact[Paxload]" required="required">
    </div>
  <div class="my-flex">
    <div class="col-50">
    <label for="Deliverylocation">Delivery location </label>
    <select id="Deliverylocation" name="contact[Delivery_location]" required="required">
      <option>Residential</option>
      <option>Hotel</option>
        <option>FBO </option>
    </select>
    </div>
    <div class="col-50">
  <label for="Concierger">Concierge related service is for </label>
    <select id="Concierger" name="contact[Concierger]" required="required">
      <option>Celebrations</option>
      <option>Flowers  </option>
        <option>Menu creation & consulting  </option>
      <option>Specialty Food </option>
      <option>Print Specific </option>
        <option>Kids Specific  </option>
      <option>Pets Specific </option>
      <option>Interior Sourcing  </option>
        <option>Other  </option>
    </select>
    </div>
  </div>
    <div class="m-mol">
   <label for="request">Please share your request brief to ensure seamless service. </label>
  <textarea rows="4" cols="50" id="request" name="contact[body]" required="required"></textarea>
  </div>
  <div class="btn-submit">
    <button type="submit">Submit</button>
  </div>
{% endform %}
