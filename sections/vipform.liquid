  <label id="contact">Crew Contact details: (Mobile only for whatsapp use)</label>
    <input type="text" name="contact[contact]" id="contact" required="required">
    </div>
  <div class="my-flex">
    <div class="col-50">
        <label for="Company">Company </label>
    <select id="company"  name="contact[Company_Name]" required="required">
