<div class="bind-c">
<div class="tab">
  <button class="tablinks active" onclick="openCity(event, 'London')">Crew</button>
  <button class="tablinks" onclick="openCity(event, 'Paris')">Pilot</button>
  <button class="tablinks" onclick="openCity(event, 'Tokyo')">Ground staff</button>
</div>

<div id="London" class="tabcontent">
  <h3>Crew</h3>
  <ul>
     {%- assign blog = blogs[section.settings.blog] -%}
                    {%- for article in blog.articles -%}
                      {% for t in article.tags %}
     {% if t contains 'crew' %}     
                      <li><h4><a href="{{ article.url }}">{{ article.title }}</a></h4> <span>{{ article.published_at  | date: '%Y-%m-%d' }}</span>   
     {% endif %}
  {% endfor %}
                    {%- endfor -%}

  </ul>
</div>

